<script>
// Hero Carousel
const heroInner = document.getElementById('heroInner');
const heroImagesCount = heroInner.children.length;
let currentIndex = 0;
function slideTo(index){ heroInner.style.transform = `translateX(-${index * 100}%)`; currentIndex=index; }
setInterval(()=>slideTo((currentIndex+1)%heroImagesCount),5000);

// Quantity Buttons
document.querySelectorAll('.product-card').forEach(card=>{
    const minus = card.querySelector('.minus');
    const plus = card.querySelector('.plus');
    const input = card.querySelector('input');
    minus.addEventListener('click', ()=>{ if(input.value>0) input.value--; updateCart(); });
    plus.addEventListener('click', ()=>{ input.value++; updateCart(); });
    input.addEventListener('input', updateCart);
});

// Update Cart Summary
function updateCart(){
    const cartItems = document.getElementById('cartItems');
    const cartTotal = document.getElementById('cartTotal');
    const deliverySelect = document.getElementById('deliverySelect');
    const deliveryCost = parseInt(deliverySelect.value);
    let html = '';
    let total = deliveryCost;
    document.querySelectorAll('.product-card').forEach(p=>{
        const qty = parseInt(p.querySelector('input').value);
        if(qty>0){
            const name = p.dataset.name;
            const price = parseInt(p.dataset.price);
            html += `<div class="cart-item">${name} x${qty} = C$${price*qty}</div>`;
            total += price*qty;
        }
    });
    if(html==='') html='<div>No items selected</div>';
    cartItems.innerHTML = html;
    cartTotal.textContent = total;
}
document.getElementById('deliverySelect').addEventListener('change', updateCart);
updateCart();

// Show Bancentro Payment Info
document.getElementById('paymentMethod').addEventListener('change', ()=>{
    document.getElementById('bankInfo').style.display =
        document.getElementById('paymentMethod').value==="bancentro"?"block":"none";
});

// Order Button
document.getElementById('orderBtn').addEventListener('click', ()=>{
    const clientName=document.getElementById('clientName').value.trim();
    const clientAddress=document.getElementById('clientAddress').value.trim();
    const payment=document.getElementById('paymentMethod').value;
    const paymentRef=document.getElementById('paymentRef').value.trim();

    if(clientName===""||clientAddress===""){ alert("Por favor ingresa tu nombre y direcci√≥n."); return; }
    if(payment==="bancentro" && paymentRef===""){ alert("Por favor ingresa el n√∫mero de referencia del pago."); return; }

    const deliverySelect=document.getElementById('deliverySelect');
    const deliveryCost=parseInt(deliverySelect.value);

    const products=document.querySelectorAll('.product-card');
    let orderText=`*Nuevo Pedido*%0A%0A*Nombre:* ${clientName}%0A*Direcci√≥n:* ${clientAddress}%0A`;
    orderText+=`*Pago:* ${payment==="delivery" ? "Pagar al Entregar" : "Transferencia Bancentro"}%0A`;
    if(payment==="bancentro") orderText+=`*Ref:* ${paymentRef}%0A`;
    orderText+=`%0A*Pedido:*%0A`;

    let total=deliveryCost;
    let anySelected=false;
    products.forEach(p=>{
        const qty=parseInt(p.querySelector('input').value);
        if(qty>0){ anySelected=true; const name=p.dataset.name; const price=parseInt(p.dataset.price);
            orderText+=`‚Ä¢ ${name} x${qty} = C$${price*qty}%0A`; total+=price*qty;
        }
    });
    if(!anySelected){ alert("Selecciona al menos un producto."); return; }

    orderText+=`%0A*Entrega:* ${deliverySelect.options[deliverySelect.selectedIndex].text}%0A*Total:* C$${total}`;
    window.open(`https://wa.me/50585065976?text=${orderText}`,'_blank');
});
</script>

